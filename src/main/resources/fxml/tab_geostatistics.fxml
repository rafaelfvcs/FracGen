<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.StackedAreaChart?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.ScatterChart?>

<GridPane 
    xmlns:fx="http://javafx.com/fxml/1" 
    prefHeight="180.0" 
    prefWidth="200.0">    
    <columnConstraints>
        <ColumnConstraints percentWidth="15" ></ColumnConstraints>
        <ColumnConstraints percentWidth="15" ></ColumnConstraints>
        <ColumnConstraints percentWidth="70" ></ColumnConstraints>
    </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="10"></RowConstraints> 
            <RowConstraints percentHeight="10"></RowConstraints> 
            <RowConstraints percentHeight="10"></RowConstraints> 
            <RowConstraints percentHeight="70"></RowConstraints> 
        </rowConstraints>
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"            
            text="Fracture Intensity">
                
        </Label>
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            text="Average Spacing">
        </Label>
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            text="Scanline lenght">
        </Label>
                    
        <Label
            fx:id="lFracInt"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"                
            text=" ">                
        </Label>
        
        <Label
            fx:id="lAvgSpacing"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"                
            text=" ">
        </Label>
        <Label
            fx:id="lScanLen"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            text=" ">
        </Label>                    
        
        <BorderPane 
            
            GridPane.columnIndex="2"
            GridPane.rowIndex="0"
            GridPane.rowSpan="4" >
            <left>
                <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>
            </left>
            <center>
                <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <PieChart />
                        <GridPane GridPane.columnIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <StackedBarChart>
                                    <xAxis>
                                        <CategoryAxis side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </StackedBarChart>
                            </children>
                        </GridPane>
                        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <StackedAreaChart>
                                    <xAxis>
                                        <NumberAxis side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </StackedAreaChart>
                            </children>
                        </GridPane>
                        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <ScatterChart>
                                    <xAxis>
                                        <CategoryAxis label="Var x" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Var y" side="LEFT" />
                                    </yAxis>
                                </ScatterChart>
                            </children>
                        </GridPane>
                    </children>
                </GridPane>
            </center>
        </BorderPane>
    
</GridPane>